#!/bin/bash

# Bash Styling to Easily Make Things Pretty :)
_bash_styling() {
  declare -A BASH_STYLING=(
    [reset_color]="\e[39m"                   # Reset Only Color
    [reset_font]="\e[21m"                    # Reset Only Font
    [reset_all]="\e[0m"                      # Reset All Styling
    [yellow]="\e[33m"                        # Yellow
    [bold_yellow]="\e[1;33m"                 # Bold Yellow
    [orange]="\e[38;5;208m"                  # Orange
    [bold_orange]="\e[1;38;5;208m"           # Bold Orange
    [red]="\e[38;5;196m"                     # Red
    [bold_red]="\e[1;38;5;196m"              # Bold Red
    [blue]="\e[38;5;27m"                     # Blue
    [bold_blue]="\e[1;38;5;27m"              # Bold Blue
    [light_blue]="\e[38;5;39m"               # Light Blue
    [bold_light_blue]="\e[1;38;5;39m"        # Bold Light Blue
    [pink]="\e[38;5;177m"                    # Pink
    [bold_pink]="\e[1;38;5;177m"             # Bold Pink
    [purple]="\e[38;5;129m"                  # Purple
    [bold_purple]="\e[1;38;5;129m"           # Bold Purple
    [light_purple]="\e[38;5;99m"             # Light Purple
    [bold_light_purple]="\e[1;38;5;99m"      # Bold Light Purple
    [green]="\e[32m"                         # Green
    [bold_green]="\e[1;32m"                  # Bold Green
    [checkmark]="[\e[0;1;32m✓\e[0m]"         # [ Reset All Bold Green ✓ Reset All ]
    [bold]="\e[1m"                           # Bold
    [x]="[\e[0;1;38;5;196mx\e[0m]"           # [ Reset All Bold Red x Reset All ]
  )

  echo -ne "${BASH_STYLING[$1]}"
}